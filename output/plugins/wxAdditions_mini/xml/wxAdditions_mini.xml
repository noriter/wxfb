<package name="wxAdditions_mini" lib="libwxAdditions_mini" icon="tree_ctrl.xpm" desc="libwxAdditions_mini controls">

  <objectinfo class="wxFlatNotebook" icon="flat_notebook.xpm" type="flatnotebook">
    <inherits class="wxPanel"/>
    <inherits class="wxWindow"/>
    <inherits class="AUI"/>
    <property name="name" type="text">m_flatNotebook</property>

    <property name="style" type="bitlist">
      <option name="wxFNB_VC71"/>
      <option name="wxFNB_FANCY_TABS"/>
      <option name="wxFNB_TABS_BORDER_SIMPLE"/>
      <option name="wxFNB_NO_X_BUTTON"/>
      <option name="wxFNB_NO_NAV_BUTTONS"/>
      <option name="wxFNB_MOUSE_MIDDLE_CLOSES_TABS"/>
      <option name="wxFNB_BOTTOM"/>
      <option name="wxFNB_NODRAG"/>
      <option name="wxFNB_VC8"/>
      <option name="wxFNB_X_ON_TAB"/>
      <option name="wxFNB_BACKGROUND_GRADIENT"/>
      <option name="wxFNB_COLORFUL_TABS"/>
      <option name="wxFNB_DCLICK_CLOSES_TABS"/>
      <option name="wxFNB_SMART_TABS"/>
      <option name="wxFNB_DROPDOWN_TABS_LIST"/>
      <option name="wxFNB_ALLOW_FOREIGN_DND"/>
      <option name="wxFNB_SMART_TABS"/>
      <option name="wxFNB_FF2"/>
      <option name="wxFNB_CUSTOM_DLG"/>
    </property>
    
  </objectinfo>

  <objectinfo class="flatnotebookpage" icon="flat_notebook.xpm" type="flatnotebookpage">
    <property name="label" type="wxString_i18n">a page</property>
    <property name="bitmap" type="bitmap" help="Page Image"/>
    <property name="select" type="bool" help="Select Page when Adding">0</property>
  </objectinfo>

</package>
